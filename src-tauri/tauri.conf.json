{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "aurex_desktop",
  "version": "0.1.0",
  "identifier": "com.aurex_desktop.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "aurex_desktop",
        "width": 1200,
        "height": 700,
        "backgroundColor": "#202020",
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["C:\\Users\\*\\AppData\\Local\\.aurex\\**", "$HOME/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
